<div id="title" class="index-title">
    {{#each this}}
    <h1>
        {{name}}
    </h1>

    <div class="sub-title">
        {{city}},&nbsp;{{country}}
    </div>
    {{/each}}
</div>

<section class="main-section">
    <div class="posts-boxes">
        {{#each this}}

                    </tr>
                    <tr>
                        <td><strong>Country</strong></td>
                        <td>&nbsp;&nbsp;&nbsp;{{country}}</td>
                    </tr>
                    <tr>
                        <td><strong>Capacity</strong></td>
                        <td>&nbsp;&nbsp;&nbsp;{{capacity}}</td>
                    </tr>
                    <tr>
                        <td><strong>Field Size</strong></td>
                        <td>&nbsp;&nbsp;&nbsp;{{fieldsize}}</td>
                    </tr>
                </table>
            </div>

        </article>
        {{/each}}

